/****************************************************************************
 * dma_parallel_xfer_test.rules
 * 
 * Performs a single DMA transfer at a time
 ****************************************************************************/

rule_graph dma_parallel_xfer_test {
	import "dma_parallel_xfer.rseg";
	import "mapping_sc.rseg";
	import "threads.rseg";
	import "dma_single_xfer_sc_mapping.rseg";

	unsigned const N_PAR = 4;
	
	dma_parallel_xfer (.N(N_PAR), .ADDR_BASE('h0000_0000), .ADDR_LIMIT('h1000_0000)) xfers; 	
	
	dma_parallel_xfer_test =
		xfers
		join
	;
}

